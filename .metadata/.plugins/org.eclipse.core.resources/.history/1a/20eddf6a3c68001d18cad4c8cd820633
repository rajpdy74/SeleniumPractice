package com.mercury.test;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.support.PageFactory;
import org.testng.Assert;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;
import org.testng.annotations.Test;

import com.mercury.pages.HotelPage;
import com.mercury.pages.LoginPage;
import com.mercury.utility.BrowserFactory;

public class HotelFRegressionSuite {
	
	private static final boolean enabled = false;
	BrowserFactory browserFactory;
	LoginPage loginPage;
	WebDriver driver;
	HotelPage hotelFinderPage;
	
	@BeforeMethod
	public void browserAppLaunch() {
		driver = BrowserFactory.startBrowserApp("chrome", "http://demo.guru99.com/test/newtours/");
	}
	
	/*
	 * TC_001: Verifying Back to Home Main Page.
	 */
	@Test(priority = 0, enabled=true, description="TC_001:Verifying Back to Home Main Page.")
	public void verifyDefaultSelectionHotelType() {
		try {
		loginPage = PageFactory.initElements(driver, LoginPage.class);
		loginPage.userNameEntry("dasd"); // Entering valid User name.
		loginPage.passwordEntry("dasd"); // Entering valid Password.
		hotelFinderPage = hotelFinderPage.clickLoginButton(); // Clicking on Login Button.
		Assert.assertEquals(true, hotelFinderPage.verifyInValidLogin());
				
		}
		catch(Exception e)
		{
			System.out.println(e);
		}
		
	}
	@AfterMethod
	public void closeApp() {
		driver.quit();
	}

}

	


